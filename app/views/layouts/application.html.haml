!!!
%html
%head
  %title StumbleSteem
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  %link{:rel => "stylesheet", :href => "assets/stylesheets/steemit.css.scss"}
  %link{:rel => "stylesheet", :href => "http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css"}
  %link{:rel => "stylesheet", :href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"}
  = csrf_meta_tags
%body
  %header
    .wrapper.clearfix
      #logo= link_to "StumbleSteem", root_path
      %nav
        = link_to "Go!", go_path, class: "button"
        - if user_signed_in?
          = link_to "Your Profile", edit_user_registration_path, class: "button"
          = link_to "Add New Post", new_post_path, class: "button"
        - else
          = link_to "Sign in", new_user_session_path, class: "button"
          = link_to "Sign Up", new_user_registration_path, class: "button"
  .wrapper
    = yield